{
  "name": "flarum-client",
  "version": "0.1.3",
  "description": "A simple client to the api of the flarum forum",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "mocha $(find ./test -name '*.test.js')",
    "test:watch": "nodemon  --exec 'npm run test --silent'",
    "coverage": "istanbul cover _mocha -- $(find ./test -name '*.test.js')",
    "coverage:watch": "nodemon --exec 'npm run coverage --silent'"
  },
  "dependencies": {
    "env-test": "^1.0.0",
    "mocha-clean": "^1.0.0",
    "node-cache": "^4.1.0",
    "q": "^1.4.1",
    "superagent": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-datetime": "^1.4.1",
    "chai-things": "^0.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0"
  }
}
